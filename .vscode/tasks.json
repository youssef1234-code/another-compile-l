{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Shared",
      "type": "shell",
      "command": "cd shared && npm run build",
      "problemMatcher": []
    },
    {
      "label": "Start Backend",
      "type": "shell",
      "command": "cd backend && npm run dev",
      "isBackground": true,
      "dependsOn": "Build Shared",
      "problemMatcher": {
        "pattern": {
          "regexp": "^(.*)$",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*Starting.*",
          "endsPattern": "^.*Server started successfully.*"
        }
      },
      "presentation": {
        "group": "dev",
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Start Frontend",
      "type": "shell",
      "command": "cd event-manager && npm run dev",
      "isBackground": true,
      "dependsOn": "Build Shared",
      "problemMatcher": {
        "pattern": {
          "regexp": "^(.*)$",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*VITE.*",
          "endsPattern": "^.*Local:.*"
        }
      },
      "presentation": {
        "group": "dev",
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Setup AI Service Venv",
      "type": "shell",
      "command": "cd ai-service && python -m venv venv && venv\\Scripts\\activate && pip install -r requirements.txt",
      "windows": {
        "command": "cd ai-service && python -m venv venv && venv\\Scripts\\activate && pip install -r requirements.txt"
      },
      "linux": {
        "command": "cd ai-service && python3 -m venv venv && source venv/bin/activate && pip install -r requirements.txt"
      },
      "osx": {
        "command": "cd ai-service && python3 -m venv venv && source venv/bin/activate && pip install -r requirements.txt"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Start AI Service",
      "type": "shell",
      "command": "cd ai-service && venv\\Scripts\\activate && python main.py",
      "windows": {
        "command": "cd ai-service && venv\\Scripts\\activate && python main.py"
      },
      "linux": {
        "command": "cd ai-service && source venv/bin/activate && python main.py"
      },
      "osx": {
        "command": "cd ai-service && source venv/bin/activate && python main.py"
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^(.*)$",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*AI Service starting.*",
          "endsPattern": "^.*Uvicorn running.*"
        }
      },
      "presentation": {
        "group": "dev",
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Start Full Stack",
      "dependsOn": [
        "Start Backend",
        "Start Frontend",
        "Start AI Service"
      ],
      "dependsOrder": "parallel",
      "problemMatcher": [],
      "presentation": {
        "group": "dev"
      }
    },
    {
      "label": "Start Full Stack (No AI)",
      "dependsOn": [
        "Start Backend",
        "Start Frontend"
      ],
      "dependsOrder": "parallel",
      "problemMatcher": [],
      "presentation": {
        "group": "dev"
      }
    },
    {
      "label": "Install Backend Dependencies",
      "type": "shell",
      "command": "cd backend && npm install",
      "problemMatcher": []
    },
    {
      "label": "Install Frontend Dependencies",
      "type": "shell",
      "command": "cd event-manager && npm install",
      "problemMatcher": []
    },
    {
      "label": "Install AI Service Dependencies",
      "type": "shell",
      "command": "cd ai-service && venv\\Scripts\\activate && pip install -r requirements.txt",
      "windows": {
        "command": "cd ai-service && venv\\Scripts\\activate && pip install -r requirements.txt"
      },
      "linux": {
        "command": "cd ai-service && source venv/bin/activate && pip install -r requirements.txt"
      },
      "osx": {
        "command": "cd ai-service && source venv/bin/activate && pip install -r requirements.txt"
      },
      "problemMatcher": []
    },
    {
      "label": "Install All Dependencies",
      "dependsOn": [
        "Install Backend Dependencies",
        "Install Frontend Dependencies",
        "Install AI Service Dependencies"
      ],
      "problemMatcher": []
    }
  ]
}