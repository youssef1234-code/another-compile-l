{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "name": "event-manager-backend",
  "buildCommand": "cd ../shared && npm install && npm run build && cd ../backend && npm install",
  "installCommand": "npm install --legacy-peer-deps",
  "builds": [
    {
      "src": "api/index.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/trpc/(.*)", "dest": "/api/index.ts" },
    { "src": "/webhooks/(.*)", "dest": "/api/index.ts" },
    { "src": "/api/(.*)", "dest": "/api/index.ts" },
    { "src": "/health", "dest": "/api/index.ts" },
    { "src": "/(.*)", "dest": "/api/index.ts" }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
